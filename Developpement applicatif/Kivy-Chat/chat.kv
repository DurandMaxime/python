<MyMessageBox@BoxLayout>
    size_hint: 1, .1
    Label:
        size_hint: .25, 1
        text: "Your message: "
    MDTextField:
        id: message_field
        text: app.message
        multiline: False
        on_text_validate: app.send_message(self.text)
        #on_text_validate: app.focused(self)
        text_validate_unfocus: False
        #on_press: self.focus = True
        #focus: True
        hint_text: "Enter your message"
        markup: True

    MDIconButton:
        icon: "send-circle-outline"
        on_press: app.send_message(message_field.text)


    




















