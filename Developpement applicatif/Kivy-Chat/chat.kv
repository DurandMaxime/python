MainScreen:

<MainScreen@BoxLayout>
    orientation: "vertical"
    MainBox:
    MyMessageBox:

<MainBox@BoxLayout>
    size_hint: 1, .9
    text: "MainBox"
    BoxLayout:
        orientation: "vertical"
        size_hint: .25, 1
        Label:
            text: "Your nickname"
        TextInput:
            multiline: False
            on_text_validate: app.on_nickname_validate(self)
        Label:
            text: "Host IP"
        TextInput:
            multiline: False
            on_text_validate: app.on_hostip_validate(self)
        Label:
            text: "Host port"
        TextInput:
            multiline: False
            on_text_validate: app.on_hostport_validate(self)
        Button:
            text: "Connect"
            on_press: app.connect_pressed()
    ScrollView:
        Label:
            text_size: self.size
            halign: "left"
            text: app.label_messages

            
            


<MyMessageBox@BoxLayout>
    size_hint: 1, .1
    Label:
        size_hint: .25, 1
        text: "Your message: "
    TextInput:
        text: app.message
        multiline: False
        on_text_validate: app.send_message(self)




















<ChatSettings@BoxLayout>
    orientation: "vertical"
    size_hint: .25, .9
    pos_hint: {"top": 1}
    TextInput:
        text: "nickname"
    TextInput:
        text: "host_ip"
    TextInput:
        text: "host_port"
    Button:
        text: "Connect"
    Button:
        text: "Type message"
        size_hint: 1, .1