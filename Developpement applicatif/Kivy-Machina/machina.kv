CameraClick:

<CameraClick>
    orientation: 'vertical'
    Camera:
        id: camera
        size_hint: 1, 1
        resolution: (self.width, self.height)
        play: False
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: self.center
        canvas.after:
            PopMatrix
                
    ToggleButton:
        style: "elevated"
        text: 'Play'
        on_press: camera.play = not camera.play
        size_hint_y: None
        height: '48dp'
        
    Button:
        walign: "center"
        theme_text_color: "Custom"
        text_color: "black"
        line_color: "blue"
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()
    