MyScreenManager:

<MyScreenManager>
    #Screen:
    #    name: "ConnectionScreen"
    #    ConectionScreen:
    Screen:
        name: "GenerateScreen"  
        GenerateScreen:
    Screen:
        name: "BaseMdp"
        BaseMdp:

<ConectionScreen@BoxLayout>
    Button:
        text: "Se connecter"
        on_press: app.manager.push("ConnectionScreen")

<GenerateScreen@RelativeLayout>
    BoxLayout:
        size_hint: 1, .2
        pos_hint: {'center_x': .5,'center_y': 0.9}
        orientation: 'horizontal'
        Button:
            text: "Générer mot de passe"
        Button:
            text: "Base de mots de passe"
            on_press: app.manager.push("BaseMdp")
            
    Button:
        text: "Generate"
        size_hint: .2, .2
        pos_hint: {'center_x': 0.5,'center_y': 0.15}
        on_press: app.generate()
    Label:
        text: app.generate_text
        size_hint: .2, .2
        pos_hint: {'center_x': 0.5,'center_y': 0.35}
    Check:
        active: True
        pos_hint: {'center_x': .44, 'center_y': .6}
        on_active: app.nb_cara_selection = "4"
    Label:
        text: "4 caractères"
        pos_hint: {'center_x': .52, 'center_y': .6}
    Check:
        active: False
        pos_hint: {'center_x': .44, 'center_y': .5}
        on_active: app.nb_cara_selection = "8"
    Label:
        text: "8 caractères"
        pos_hint: {'center_x': .52, 'center_y': .5}
    Check:
        active: False
        pos_hint: {'center_x': .44, 'center_y': .4}
        on_active: app.nb_cara_selection = "16"
    Label:
        text: "16 caractères"
        pos_hint: {'center_x': .52, 'center_y': .4}

<BaseMdp@RelativeLayout>
    BoxLayout:
        size_hint: 1, .2
        pos_hint: {'center_x': .5,'center_y': 0.9}
        orientation: 'horizontal'
        Button:
            text: "Générer mot de passe"
            on_press: app.manager.pop()
        Button:
            text: "Base de mots de passe"
    
    BoxLayout:
        size_hint: 1, .8
        BoxLayout:
            orientation: "vertical"
            Button: 
                text: "Ajouter nouveau mot de passe"
                #on_press: password_list.text += site_enter.text + " : " + password_enter.text + "\n"
                on_press: scrollview_box.add_new_password(app.generate_text, site_enter.text)
            Label:
                text: "Entrer mot de passe : "
            TextInput:
                id: password_enter
                text: app.generate_text
            Label:
                text: "Site : "
            TextInput:
                id: site_enter

        ScrollView:
            StackLayoutList:
                height: self.minimum_height
                orientation: 'lr-tb'
                id: scrollview_box
                text_size: self.width, None
                size_hint_y: None
    

<Check@MDCheckbox>
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)