MainScreen:






<MainScreen@BoxLayout>
    orientation: "vertical"
    MainBox:
    MyMessageBox:

<MainBox@BoxLayout>
    size_hint: 1, .9
    text: "MainBox"
    BoxLayout:
        orientation: "vertical"
        size_hint: .25, 1
        Label:        
            text: "[font=fonts/Chunk Five Print.otf][b]Nickname[/b][/font]"
            markup: True
        MDTextField:
            mode: "fill"
            multiline: False
            on_text_validate: app.on_nickname_validate(self)
        Label:
            text: "[font=fonts/Chunk Five Print.otf][b]Host Ip[/b][/font]"
            markup: True
        MDTextField:
            mode: "fill"
            multiline: False
            on_text_validate: app.on_hostip_validate(self)
        Label:
            text: "[font=fonts/Chunk Five Print.otf][b]Host port[/b][/font]"
            markup: True
        MDTextField:
            mode: "fill"
            multiline: False
            on_text_validate: app.on_hostport_validate(self)
        MDRectangleFlatIconButton:
            icon: "lan-connect"
            text: "Connect"
            theme_text_color: "Custom"
            text_color: "white"
            line_color: "white"
            theme_icon_color: "Custom"
            icon_color: "white"
            size_hint: 1,.1
            on_press: app.connect_pressed()
        MDRectangleFlatIconButton:
            icon: "lan-disconnect"
            text: "Disconnect"
            theme_text_color: "Custom"
            text_color: "white"
            line_color: "white"
            theme_icon_color: "Custom"
            icon_color: "white"
            size_hint: 1,.1
            on_press: app.disconnect_pressed()
   

    ScrollView:
        do_scroll_y: True
        scroll_y: 0
        Label:
            halign: "left"
            text_size: self.width, None
            #text: "\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n"+app.label_messages
            text: app.label_messages
            markup: True
            size_hint_y: None
            height: self.texture_size[1]
            id: mybutton
            
                

                


            


<MyMessageBox@BoxLayout>
    size_hint: 1, .1
    Label:
        size_hint: .25, 1
        text: "Your message: "
    MDTextField:
        id: message_field
        text: app.message
        multiline: False
        on_text_validate: app.send_message(self.text)
        hint_text: "Enter your message"
        markup: True

    MDIconButton:
        icon: "send-circle-outline"
        on_press: app.send_message(message_field.text)

    




















